<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<p>
  <strong>Tags:</strong>
  <% @post.tags.each do |t| %>
    <%= link_to t.name, posts_path(tag: t.name) %>
  <% end %>
</p>
<p>
  <strong>Comments:</strong>
  <% @post.comments.each do |com| %>
    <br>
    <%= com.user.email + ":" %>
    <%= com.body %>
  <% end %>
</p>
<%= link_to 'New Comment', new_post_comment_path(@post) %> |
<%= link_to 'Back', posts_path %>
