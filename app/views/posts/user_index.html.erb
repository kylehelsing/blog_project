<p id="notice"><%= notice %></p>

<div class = "section">
  <div class = "container">
    <div class="columns">
      <div class="column is-10">
        <h1>Your Posts</h1>
        <% @posts.each do |post| %>
          <div class="card">
            <header class="card-header">
              <p class="card-header-title">
                <%= post.title %>
              </p>
              <a class="card-header-icon">
                <span class="icon">
                  <i class="fa fa-angle-down"></i>
                </span>
              </a>
            </header>
            <div class="card-content">
              <div class="content">
                <%= post.body %>
                <br>
                <% post.tags.each do |t| %>
                  <%= link_to "#" + t.name, posts_path(tag: t.name) %>
                <% end %>
                <br>
                <small><%= post.created_at.strftime("%m-%d-%Y") %></small>
              </div>
            </div>
            <footer class="card-footer">
              <a class="card-footer-item" href= "<%= post_path(post) %>">Show</a>
              <a class="card-footer-item" href= "<%= edit_post_path(post) %>">Edit</a>
              <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-footer-item' %>
            </footer>
          </div>
        <% end %>
      </div>
      <div class="column">
        <strong>All Tags:</strong>
        <br>
        <% @total_tags.each do |t| %>
          <%= link_to t.name, posts_path(tag: t.name) %>
          <br>
        <% end %>
      </div>
    </div>
    <br>
    <%= link_to 'New Post', new_post_path, class: 'button is-info' %>
  </div>
</div>






