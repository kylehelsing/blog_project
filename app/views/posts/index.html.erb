<p id="notice"><%= notice %></p>

<h1>All Posts</h1>
<%if user_signed_in? %>
  <%= link_to 'Your Posts', user_posts_path %>
<%end %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Post', new_post_path %>
<br>
<br>
<strong>All Tags:</strong>
<br>
<% @total_tags.each do |t| %>
  <%= link_to t.name, posts_path(tag: t.name) %>
<% end %>
